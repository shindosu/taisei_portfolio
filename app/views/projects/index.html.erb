<div class="container">
<div class="skill-set d-flex justify-content-center">
  <% @skills.each do |skill| %>
    <% if skill == "Search" %>
      <p class="btn" id="search"><i class="fas fa-search"></i></p>
    <% elsif skill == "All" %>
      <%= link_to skill, projects_path, class: "btn btn-danger mr-4 px-4" %>
    <% else %>
      <%= link_to skill, projects_path(skill: skill), class: "btn mr-4 px-4" %>
    <% end %>
  <% end %>
</div>

  <div class="d-flex justify-content-center">
    <% @projects.each do |project| %>
      <%= link_to "##{project.title.downcase.gsub(" ", "_")}", data: {toggle: "modal"} do %>
        <div class="card mr-5 border-0">
          <%= image_tag(project.thumbnail, size: "250x150")%>
        </div>
      <% end %>
      <%= render 'shared/show_modal', project: project %>
    <% end %>
  </div>
</div>

<div class="w-50">
  <%= simple_form_for projects_path, method: :get, html:{class: "search-form d-flex ml-3 mt-3"} do %>
  <%= text_field_tag :query,
  params[:query],
  class: "form-control mr-2",
    placeholder: "Search a topic or category"
    %>
    <%= button_tag(type: "submit", class: "btn btn-default") do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
  </div>
