<div class="container">
  <h1 class="text-center mb-0">Want to work together or have inquiries?</h1>
  <div class="social_icons my-4 py-4 text-center">
    <%= link_to 'https://www.facebook.com/taiseiyamadashindosu', class: "mr-5", target: :blank do %>
        <i class="fab fa-facebook-f fa-sm arrow" id="facebook"></i>   
    <% end %>
    <%= link_to 'https://www.instagram.com/taiseiyamadas/', class: "mr-5", target: :blank do %>
        <i class="fab fa-instagram fa-sm arrow"></i>   
    <% end %>
    <%= link_to 'https://twitter.com/TaiseiYamada4', class: "mr-5", target: :blank do %>
        <i class="fab fa-twitter fa-sm arrow"></i>
    <% end %>
    <%= link_to 'https://line.me/R/ti/p/tyamada2014', class: "mr-5", target: :blank do %>
        <i class="fab fa-line fa-sm arrow"></i>
    <% end %>
    <%= link_to 'https://www.linkedin.com/in/taisei-yamada/', class: "mr-5", target: :blank do %>
        <i class="fab fa-linkedin fa-sm arrow"></i>
    <% end %>
    <%= link_to 'https://github.com/shindosu', class: "mr-5", target: :blank do %>
        <i class="fab fa-github fa-sm arrow"></i>
    <% end %>
  </div>
  <%= simple_form_for @contact, html:{class: "mt-3"} do |f| %>
  <%= f.input :full_name, placeholder: 'FULL NAME', label: false %>
  <%= f.input :email, placeholder: 'EMAIL', label: false %>
  <%= f.input :subject, placeholder: 'SUBJECT', label: false %>
  <%= f.input :message, placeholder: 'MESSAGE', label: false %>
  <div class="buttonholder text-center mt-4">
    <%= f.submit "SEND", class: "btn btn-danger px-4 rounded-0", 'data-toggle': "modal", 'data-target': "#exampleModalCenter" %>
  </div>
  
<% end %>

<%= render 'shared/email_confirmation' %>
</div>