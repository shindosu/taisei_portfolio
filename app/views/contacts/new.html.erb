<%= simple_form_for @contact, html:{class: "w-50"} do |f| %>
  <%= f.input :full_name, placeholder: 'Ex: John Doe' %>
  <%= f.input :email, placeholder: 'johndoe@gmail.com' %>
  <%= f.input :subject, placeholder: 'Ex: Web Development Request' %>
  <%= f.input :message, placeholder: 'Enter message..' %>
  <%= f.submit "Send", class: "btn btn-danger", 'data-toggle': "modal", 'data-target': "#exampleModalCenter" %>
<% end %>

