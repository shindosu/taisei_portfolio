<div id="carousel<%= project.title.downcase.gsub(" ","_") %>" class="carousel slide" data-ride="carousel" data-interval="false">
  <ol class="carousel-indicators">
    <% project.user_journey_image.gsub('"', '').gsub(/(\[|\]|\s)/,"").split(",").each_with_index do |image, index| %>
      <% if index == 0 %>
        <li data-target="#carousel<%= project.title.downcase.gsub(" ","_") %>" data-slide-to="<%=index%>" class="active mx-2"></li>
      <% else %>
        <li data-target="#carousel<%= project.title.downcase.gsub(" ","_") %>" data-slide-to="<%=index%>" class="mx-2"></li>
      <% end %>    
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% project.user_journey_image.gsub('"', '').gsub(/(\[|\]|\s)/,"").split(",").each_with_index do |image, index| %>
      <% if index == 0 %>
        <div class="carousel-item active">
          <%= image_tag(project.user_journey_image.gsub('"', '').gsub(/(\[|\]|\s)/,"").split(",").first, class: "d-block w-100", size: "800x450")%>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= image_tag(image, class: "d-block w-100", size: "800x450")%>
        </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carousel<%= project.title.downcase.gsub(" ","_") %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon carousel-buttons" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel<%= project.title.downcase.gsub(" ","_") %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon carousel-buttons" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>