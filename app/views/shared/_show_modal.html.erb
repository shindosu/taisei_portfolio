<div class="modal fade bd-example-modal-lg" id= "<%=project.title.downcase.gsub(" ", "_")%>"tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body p-0">
        <%= render 'shared/carousel', project: project%>
        <div class="skill-used">
          <ul class="list-group list-group-horizontal-sm">
            <% project.skill.gsub('"', '').gsub(/(\[|\]|)/,"").split(",").each do |skill| %>
              <li class="list-group-item mx-2 mt-2 border border-danger py-1 px-2 d-flex align-items-center"><p class="m-0"><%= skill %></p></li>
            <% end %>
            <% if project.responsiveness %>
              <li class="mx-2 mt-2 py-1 px-2 d-flex align-items-center responsive"><p class="m-0">RESPONSIVE</p></li>
            <% else %>
              <li class="mx-2 mt-2 py-1 px-2 d-flex align-items-center not-responsive"><p class="m-0">NOT RESPONSIVE</p></li>
            <% end %>
          </ul>
        </div>
        <div class="show-info p-4 border-bottom">
          <h1 class="show-title"><%= project.title %></h1>
          <p><%= project.description %></p>
        </div>
        <div class="modal-header pb-0 border-0">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>