<div class="modal fade bd-example-modal-lg" id= "<%=project.title.downcase.gsub(" ", "_")%>"tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body p-0">
        <%= render 'shared/carousel', project: project%>
        <div class="skill-used">
          <ul class="list-group list-group-horizontal-sm ml-4">
            <% project.skill.gsub('"', '').gsub(/(\[|\]|)/,"").split(",").each do |skill| %>
              <li class="list-group-item mr-3 mt-2 border border-danger py-1 px-2 d-flex align-items-center"><p class="m-0"><%= skill %></p></li>
            <% end %>
            <% if project.responsiveness %>
              <li class="mr-3 mt-2 py-1 px-2 d-flex align-items-center responsive"><p class="m-0">RESPONSIVE</p></li>
            <% else %>
              <li class="mr-3 mt-2 py-1 px-2 d-flex align-items-center not-responsive"><p class="m-0">NOT RESPONSIVE</p></li>
            <% end %>
          </ul>
        </div>
        <div class="info mx-4 mt-4 border-bottom">
          <h3 class="show-title mb-1"><%= project.title %></h3>
          <p class="catch-phrase mb-0"><%= project.catch_phrase %></p>
        </div>
        <p class="mx-4 mt-4"><%= project.description %></p>
        <div class="modal-footer d-flex justify-content-between border-0 px-0 mx-3">
          <div class="buttons">
            <%= link_to "https://www.#{project.demo_link}", class: "btn btn-danger rounded-0" do%>
              <p class="mb-0"><i class="far fa-eye"></i> Demo</p>
            <% end %>
            <%= link_to "https://www.#{project.code_link}", class: "btn btn-danger rounded-0 ml-4" do%>
              <p class="mb-0 rounded-0"><i class="fas fa-code"></i> Code</p>
            <% end %>
          </div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        </div>
      </div>
    </div>
  </div>
</div>